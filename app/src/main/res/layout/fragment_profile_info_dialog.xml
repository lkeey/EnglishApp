<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Authentication.ProfileInfoDialogFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/app_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


        <TextView
            android:id="@+id/textHelper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="If you complete the full registration, you will receive score"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/design_default_color_primary"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/imgLogo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/textAgree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:text="Let's do it"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/round_corner_btn"
            app:layout_constraintTop_toBottomOf="@id/textHelper"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/textClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close And Skip"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:textColor="#808080"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/textAgree"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>