<resources>

    <style name="Widget.Theme.EnglishApp.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.EnglishApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Switcher" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/design_default_color_primary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/grey
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/grey
        </item>
    </style>

</resources>