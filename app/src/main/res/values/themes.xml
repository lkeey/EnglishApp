<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.EnglishApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/secondary_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/design_default_color_primary</item>
        <item name="colorSecondaryVariant">@color/design_default_color_primary</item>
        <item name="colorOnSecondary">@color/design_default_color_primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/design_default_color_primary</item>

        <!-- Customize your theme here. -->
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>

        <!--bottom navigation-->
        <item name="android:navigationBarColor">@color/white</item>

    </style>

    <style name="ThemeWithActionBar" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="Theme.EnglishApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EnglishApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EnglishApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="AppModalStyleFS">
        <item name="android:background">@drawable/gradient_background</item>
    </style>

    <style name="FullScreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.EnglishApp.Fullscreen" parent="Theme.EnglishApp">
        <item name="android:actionBarStyle">@style/Widget.Theme.EnglishApp.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.EnglishApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>
