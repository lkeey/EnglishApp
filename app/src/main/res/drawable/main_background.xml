    </item>


    <item
        android:bottom="200dp"
        android:left="-100dp"
        android:right="-100dp"
        android:top="100dp">

        <shape android:shape="oval">
            <solid
                android:color="@color/design_default_color_primary"/>
        </shape>

    </item>


</layer-list>